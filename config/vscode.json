// This are only settings for VSCode.
// You'll need to specify the formatters later.
// Also setup the Project Manager.
// If you want, of course.

{
  // Main Config
  "editor.wordWrap": "on",
  "editor.linkedEditing": true,
  "editor.fontFamily": "'iMWritingMono Nerd Font Mono', monospace",
  "editor.fontSize": 16,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.formatOnSave": true,
  "editor.parameterHints.enabled": false,
  "editor.minimap.autohide": true,
  "editor.smoothScrolling": true,
  "editor.renderLineHighlight": "gutter",
  "editor.stickyScroll.enabled": false,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.newWindowDimensions": "maximized",
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "explorer.compactFolders": false,
  "workbench.editor.labelFormat": "short",
  "workbench.startupEditor": "none",

  // Theming
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "vscode-icons", // install from extensions tab
  "workbench.colorTheme": "Gruvbox Dark Hard" //install from extensions tab
}
